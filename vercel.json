{
    "version": 2,
    "builds": [
      { "src": "frontend/package.json", "use": "@vercel/next" },
      { 
        "src": "api/app.py",
        "use": "@vercel/python"
      }
    ],
    "functions": {
      "api/app.py": {
        "excludeFiles": [
          "api/app.log",
          "api/data/**", 
          "api/README.md"
        ]
      }
    },
    "routes": [
      { 
        "src": "/api/(.*)", 
        "dest": "api/app.py"
      },
      { 
        "src": "/(.*)", 
        "dest": "frontend/$1"
      }
    ]
  } 